<% include partials/header.ejs %>

<div class="ui main text container segment">
	<div class="ui huge header">New Blog</div>
	<form class="ui form" action="/blogs/<%= item._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= item.title %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= item.image %>">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]"><%= item.body %></textarea>
		</div>
		<input class="ui violet basic button big" type="submit">
	</form>
</div>

<% include partials/footer.ejs %>